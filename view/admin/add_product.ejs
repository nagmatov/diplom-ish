          </label>

          <label class="block mt-4 text-sm">
            <span class="text-gray-700 dark:text-gray-400"> Katigorya </span>
            <select
              name="category"
              class="block w-full mt-1 text-sm dark:text-gray-300 dark:border-gray-600 dark:bg-gray-700 form-select focus:border-purple-400 focus:outline-none focus:shadow-outline-purple dark:focus:shadow-outline-gray"
              required
            >
              <option value="none" selected disabled hidden>Variantni tanlang</option>
              <% category.forEach(el => { %>
              <option value="<%= el._id %>"><%= el.title %></option>
              <% }) %>
              <!-- <option value="Wall Accent">Wall Accent</option>
              <option value="Lighting">Lighting</option>
              <option value="Garden & Outdoor">Garden & Outdoor</option>
              <option value="Sofa & Recliners">Sofa & Recliners</option>
              <option value="Storage">Storage</option>
              <option value="Beds & Mattress">Beds & Mattress</option> -->
