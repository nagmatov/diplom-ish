<%- include('partials/header.ejs') %>

<!--================login_part Area =================-->
<section class="login_part padding_top">
  <div class="container">
    <div class="login_part_form_iner w-50 mx-auto">
      <h3>
        <!-- Welcome Back ! <br /> -->
        Iltimos Telefon raqamizga kelgan kodni kiriting
      </h3>
      <% if (msg.length>0) { %>
        <div class="alert alert-danger alert-dismissible fade show w-100" role="alert">
          <%= msg %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% } %>
      <form class="row contact_form" action="/signup/otp-signup" method="post">
        <div class="col-md-12 form-group p_star">
          <input type="number" class="form-control" id="otp" name="otp" placeholder="Verification Code" required />
        </div>
        <div class="col-md-12 form-group">
          <button type="submit" value="submit" class="btn_3">Log in</button>
          <!-- <a class="lost_pass" href="#">Resent OTP</a> -->
        </div>
      </form>
    </div>
  </div>
</section>

<%- include('partials/footer.ejs') %>
