<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  if ('<%= order.discount %>') {
    if ('<%= order.discountIsPercent %>' == 'true') {
      console.log('<%= order.discountIsPercent %>');
      $(
        `<tr id="confirmation_subtotal"><th colspan="3">Discount</th><th>-${'<%= order.discount %>'}%(${(Math.round('<%= order.total %>' * ('<%= order.discount %>' / 100)))<'<%= order.maxDiscountAmt %>'?(Math.round( '<%= order.total %>'* ('<%= order.discount %>' / 100))):'<%= order.maxDiscountAmt %>'})</th></tr>`
      ).insertAfter(`#confirmation_subtotal`);
      $(`#confirmation_total`).replaceWith(
        `<tr id="confirmation_total"><th colspan="3"></th><th>${(Math.round('<%= order.total %>' * (1 - '<%= order.discount %>' / 100)) + 50000)<'<%= order.maxDiscountAmt %>'?(Math.round( '<%= order.total %>'* (1 - '<%= order.discount %>' / 100)) + 50000):'<%= order.total %>'-'<%= order.maxDiscountAmt %>'+50000}sum</th></tr>`
      );
    } else {
      $(
        `<tr id="confirmation_subtotal"><th colspan="3">Chegirma</th><th>-â‚¹${'<%= order.discount %>'}</th></tr>`
      ).insertAfter(`#confirmation_subtotal`);
      $(`#confirmation_total`).replaceWith(
        `<tr id="confirmation_total"><th colspan="3"></th><th>${'<%= order.total+50-order.discount %>'}sum</th></tr>`
      );
    }
  }

  var orderId;
  $(document).ready(function () {
    var settings = {
      url: '/create/orderId',
      method: 'POST',
      timeout: 0,
      headers: {
        'Content-Type': 'application/json',
      },
      data: JSON.stringify({
        amount: '<%= ((order.total+50000)*100) %>',
      }),
    };

    //creates new orderId everytime
    $.ajax(settings).done(function (response) {
      orderId = response.orderId;
      console.log(orderId);
      $('#rzp-button1').show();
    });
  });

  document.getElementById('rzp-button1').onclick = function (e) {
    var options = {
      key: '<%= key %>', // Enter the Key ID generated from the Dashboard
      amount: '<%= ((order.total+50)*100) %>', // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
      currency: 'INR',
      name: 'Hourglass',
      description: 'Buy Furniture',
      image: 'https://example.com/your_logo',
      order_id: orderId, //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
      handler: function (response) {
        location.href = '/order-success';
      },
      theme: {
        color: '#3399cc',
      },
    };
    var rzp1 = new Razorpay(options);
    rzp1.on('payment.failed', function (response) {
      customFailedAlert(response.error.message);
    });
    rzp1.open();
    e.preventDefault();
    function customFailedAlert(message) {
      Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: message,
      });
    }
  };

  document.getElementById('cod12').onclick = () => {
    $.ajax({
      url: '/order-confirmation',
      method: 'POST',
      // timeout: 0,
      // headers: {
      //   'Content-Type': 'application/json',
      // },
      // data: JSON.stringify({
      //   amount: '',
      // }),
    }).then((response) => {
      location.href = '/order-success';
    });
  };
</script>
